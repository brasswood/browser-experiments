let
  pkgs = import <nixpkgs> {};
  # https://wiki.nixos.org/wiki/Python
  python = pkgs.python3.override {
    self = python;
    packageOverrides = pyfinal: pyprev: {
       types-PyScreeze = pyfinal.callPackage ./types-pyscreeze.nix { };
       types-PyAutoGUI = pyfinal.callPackage ./types-pyautogui.nix { };
    };
  };

in pkgs.mkShell {
  packages = [
    (python.withPackages (p: [
      p.opencv-python
      p.pyautogui
      p.tkinter
      p.humanize
      p.mypy
      p.types-PyAutoGUI
      p.pyperclip
    ]))
    pkgs.scrot
  ];
}
